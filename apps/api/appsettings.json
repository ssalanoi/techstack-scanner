{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=App_Data/scan.db"
  },
  "Jwt": {
    "Issuer": "TechStackScanner",
    "Audience": "TechStackScanner",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "ScanOptions": {
    "MaxDepth": 5,
    "AllowedRootPath": null
  },
  "QueueOptions": {
    "MaxConcurrency": 2,
    "MaxRetries": 3,
    "QueueCapacity": 100
  },
  "Ollama": {
    "Host": "http://localhost:11434",
    "Model": "llama3.2",
    "TimeoutSeconds": 120,
    "MaxTokens": 1000
  },
  "AllowedHosts": "*"
}
